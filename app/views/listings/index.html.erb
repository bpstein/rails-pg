<div class="jumbotron">
  <h1>Rent gear.</h1>
  <h1>Save cash.</h1>
  <h1>Start your adventure.</h1>
  <h2>The peer-to-peer marketplace for sports and outdoor gear.</h2>
</div>

<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h4><%= listing.name %></h4>
          <p><%= number_to_currency(listing.price) %> per day</p>
          <p><%= listing.description %></p>
          <p><%= "Borrow from #{listing.user.name}" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<% if user_signed_in? %>

<%= link_to new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } do %>
  <i class="glyphicon glyphicon-plus"></i> Add New Listing
<% end %>
<% end %>